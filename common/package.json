{
  "name": "@cms-eapd/common",
  "version": "0.0.1",
  "type": "module",
  "description": "APD app for CMS HITECH program",
  "exports": "./index.js",
  "scripts": {
    "lint": "eslint '**/*.js'",
    "stryker": "TZ=utc stryker run",
    "test": "DEBUG_PRINT_LIMIT=10000 TZ=utc jest --collectCoverage",
    "test-watch": "DEBUG_PRINT_LIMIT=10000 TZ=utc jest --watch",
    "npm-check": "npx npm-check-updates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enterprise-CMCS/eAPD.git"
  },
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/Enterprise-CMCS/eAPD/issues"
  },
  "homepage": "https://github.com/Enterprise-CMCS/eAPD#readme",
  "engines": {
    "node": "16.16.0"
  },
  "dependencies": {
    "@joi/date": "2.1.0",
    "joi": "17.7.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "6.1.2",
    "@stryker-mutator/jest-runner": "6.1.2"
  },
  "packageManager": "yarn@1.22.18",
  "jest": {
    "coverageDirectory": "./coverage/",
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "testRegex": ".*.test.(j|t)s[x]?$",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/schemas/**",
      "!**/*.test.{js,jsx}",
      "!**/coverage/**",
      "!**/*.config.{js,jsx}",
      "!**/index.{js,jsx}",
      "!**/block-navigation.js",
      "!**/prettify.js",
      "!**/sorter.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 74,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
